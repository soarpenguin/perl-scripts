#bind F1 to go to next  window.
bindkey -k k2 prev
#bind F2 to move to previous window
bindkey -k k3 next
# bind F3 to rename a screen
bindkey -k k1 title
# bind F4 to new a screen session in this terminal
bindkey -k k4 screen
# bind F5 to detach
bindkey -k k5 detach
# bind F8 to enter copy mode
bindkey -k k8 copy
term xlinux
#setenv LC_CTYPE zh_CN.GBK
setenv TERM xlinux
#use ` as the Global Key
defscrollback 10000

defutf8 on
defencoding UTF-8
encoding UTF-8 GBK

#auto detach when offline.
autodetach on

hardstatus alwayslastline
